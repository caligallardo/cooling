function [dataTable] = get_fridge_data (filename)
    % given txt file w/ follwing header:
    % Device,Time,DHT1-OUT Temp,DHT1-OUT Hum,DHT2-IN Temp,DHT2-IN Hum,Soil,Infrared
    % following by data delimited by commas
    % outputs a table w/ columns: 'Time',
    % 'OutTemp','OutHum','InTemp','InHum','Soil','Infrared','Reset'
    % Reset: 1 if first row beneath header, 0 otherwise
    
    reset = 1;
    c = {'Time','OutTemp','OutHum','InTemp','InHum','Soil','Infrared','Reset'}; % create cell arrray 
    
    fid = fopen(filename);
    tline = fgetl(fid);
    while ischar(tline)
        %disp(tline)
        linecell = textscan(tline, '%s %f %f %f %f %f %f %f', 'Delimiter', ',');
        newrow = [linecell(2:length(linecell)), reset];
        if isempty(linecell{2})
            % is reset header
            reset = 1;
        else
            % add to data cell
            c = [c;newrow]; % is there a way to know (or est) the size of c in advance?
            reset = 0;
        end
        tline = fgetl(fid);
    end
    fclose(fid);    
    
    [m, n] = size(c);
    dataTable = cell2table(c(2:m, :), 'VariableNames', c(1, :));    
    
end